<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <table class="table table-bordered table-border text-center shadow">
            <tr>
                <th>user id</th>
                <th>user name</th>
                <th>user email</th>
                <th>user password</th>
                <th>user delete</th>
                <th>user edit</th>
            </tr>
            <% users.forEach(function(user){ %>
            <tr>
                <td><%= user.user_id %></td>
                <td><%= user.user_name %></td>
                <td><%= user.user_email %></td>
                <td><%= user.user_password %></td>
                <td><a href="/delete/<%= user.user_id %>" class="btn btn-danger btn-sm">delete</a></td>
                <td><a href="/edit/<%= user.user_id %>" class="btn btn-success btn-sm">edit</a></td>
            </tr>
            <% })  %>
        </table>


    </div>
    
</body>
</html>